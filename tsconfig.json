{
    "include": ["./src/**/*.ts"],
    "output": "./dist/",
    "paths": {
        "src/*": ["src/*", "src/*/*"],
    },
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "useUnknownInCatchVariables": false,
    },
}
